<% if picture %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <div class="media">
        <%= link_to guest_path(picture.attendee), class: 'pull-left' do %>
            <%= image_tag picture.attendee.avatar.url(:thumb), class: "media-object", alt: picture.attendee.username %>
        <% end %>
        <div class="media-body">
          <h3 class="media-heading"><%= link_to picture.attendee.username, guest_path(picture.attendee)  %></h3>
        </div>
      </div>
      <%= image_tag picture.image.url(:medium), class: 'media-picture', data: {original: picture.image.url(:big)} %>
      <div class="caption">
        <p><small>
  <%= timeago_tag picture.created_at, :limit => 10.days.ago, :lang => :es %></small></p>
        <h4><%= picture.name %></h4>

        <%= render partial: "shared/like", locals: {resource: picture} %>

        <% if picture.cached_votes_up > 0 %>
          <p>Le gusta a: 
            <% picture.get_upvotes.each_with_index do |vote, i| %>
              <% if i>0 %>, <% end %>
              <%= link_to guest_path(vote.voter) do %><%= vote.voter.username %><% end %>
            <% end %>
          </p>
        <% end %>
        <% if picture.cached_votes_down > 0 %>
          <p>No le gusta a: 
            <% picture.get_downvotes.each_with_index do |vote, i| %>
              <% if i>0 %>, <% end %>
              <%= link_to guest_path(vote.voter) do %><%= vote.voter.username %><% end %>
            <% end %>
          </p>
        <% end %>
        <%= render partial: 'comments/comments', locals: { commentable: picture} %>

      </div>
    </div>
  </div>

  <div class="col-sm-6 col-md-4">
    <div class="panel panel-default picture">
      <div class="panel-heading">
        <div class="media">
          <%= link_to guest_path(picture.attendee), class: 'pull-left' do %>
              <%= image_tag picture.attendee.avatar.url(:thumb), class: "media-object", alt: picture.attendee.username %>
          <% end %>
          <div class="media-body">
              <%= link_to picture.attendee.username, guest_path(picture.attendee)  %>
              <span><%= timeago_tag picture.created_at, :limit => 10.days.ago, :lang => :es %></span>
          </div>
        </div>
      </div>
      <%= image_tag picture.image.url(:medium), class: 'media-picture', data: {original: picture.image.url(:big)} %>
      <div class="panel-body">
        <p><%= picture.name %></p>
      </div>
      <%= render partial: 'comments/view_all', locals: { commentable: picture} %>
      <%= render partial: 'comments/new_comment', locals: { commentable: picture } %>
    </div>
  </div>
<% end %>

