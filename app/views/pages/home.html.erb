<% content_for :javascript_includes do %>
  <%= javascript_include_tag "infinite_scroll" %>
<% end %>


<div class="home-cover">
      <div class="wrapper">
          <div class="image">
              <img src="images/wed.jpg" alt="people">
          </div>
      </div>
      <div class="cover-info">
          <nav class="navbar navbar-default">
            <div class="text-center">
                <ul class="nav navbar-nav">
                  <li class="col-md-4 col-xs-4">
                    <%= link_to new_picture_path do %>
                      <span class="glyphicon glyphicon-camera"></span>&nbsp;<span class="hidden-xs">Sube una foto</span>&nbsp;
                    <% end %>
                  </li>
                  <li class="col-md-4 col-xs-4">
                    <%= link_to new_song_path do %>
                      <span class="glyphicon glyphicon-music"></span>&nbsp;<span class="hidden-xs">Sugiere una canci√≥n</span>&nbsp;
                    <% end %>
                  </li>
                  <li class="col-md-4 col-xs-4">
                    <%= link_to new_dance_path do %>
                      <span class="glyphicon glyphicon-user"></span>&nbsp;<span class="hidden-xs">Invita a bailar</span>&nbsp;
                    <% end %>
                  </li>
                </ul>
            </div>
          </nav>
      </div>
  </div>

<div class="row container-fluid home-main">
    <div class="col-md-3 home-col">
        <%= render partial: 'messages/new_thumb', locals: {message: @message} %>    
    </div>
    <div class="col-md-9 container-fluid home-col last-activity">
        <%= render partial: 'last_activity', locals: {resources: @resources} %>    
    </div>
</div>


<div id="spinner" class="row">
    <%= image_tag "spinner.gif", class: "center-block" %>
</div>
