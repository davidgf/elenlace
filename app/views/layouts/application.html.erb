<body class="<%= yield (:body_class) %>">

<%= render 'shared/header' unless !current_attendee %>

<div class="container main-container" >
    <% if notice != nil %>
      <p id="notice" class="alert alert-success"><%= notice %></p>
    <% end %>

    <%= yield %>
</div>

<%= yield :javascript_includes %>
