 <div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <div class="media">
      <%= link_to account_path(message.attendee), class: 'pull-left' do %>
          <img class="media-object" src="" alt="Sandra">
      <% end %>
      <div class="media-body">
        <h3 class="media-heading"><%= message.attendee.username %></h3>
        <%= message.message %>
        <p><small><%= message.created_at %></small></p>
      </div>
    </div>
    <div class="caption">
      <p><a href="#" class="btn btn-primary" role="button"><span class="glyphicon glyphicon-thumbs-up"></span> Me gusta</a> <a href="#" class="btn btn-default" role="button"><span class="glyphicon glyphicon-thumbs-down"></span> No me gusta</a></p>
    </div>
  </div>
</div>