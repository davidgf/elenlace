<h1>Tus notificaciones</h1>

<% if @notifications.length > 0 %>
	<div class="row">
	  <div class="col-md-12">
	    <%= link_to read_all_notifications_path, class: "pull-right", method: :post do %>
	      <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Marcar como le√≠das</button>
	    <% end %>
		</div>
	</div>
	<div class="row">
		<ul>
		<% @notifications.each do |notification| %>
			<%= render partial: 'notification', object: notification %>
		<% end %>
		</ul>
	</div>
<% else %>
	<p>
		No tienes nuevas notificaciones
	</p>
<% end %>