<div class="panel panel-default">
  <div class="panel-heading">
    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne-<%= table.name %>">
      <h4 class="panel-title">
        <%= table.name %>
      </h4>
    </a>
    <% if can? :update, table %>
      <%= link_to 'Editar', edit_table_path(table) %>
    <% end %>
  </div>
  <div id="collapseOne-<%= table.name %>" class="panel-collapse collapse in">
    <div class="panel-body">
      <table class="table">
        <thead>
          <tr>
            <th>Foto</th>
            <th>Invitado</th>
          </tr>
        </thead>
        <tbody>
          <% table.attendees.each do |attendee| %>
            <tr>
              <td rowspan="2"><div class="media">
                  <a class="pull-left" href="<%= guest_path(attendee) %>">
                    <%= image_tag attendee.avatar.url(:thumb), class: "media-object", alt: attendee.username %>
                  </a>
                </div></td>
              <td><a href="<%= guest_path(attendee) %>"><%= attendee.username %></a></td>
            </tr>
            <tr>
              <td>Amigo rooooool</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  