<% content_for :javascript_includes do %>
  <%= javascript_tag do %>
    $(function(){
      $('li.attendee').on('click', function(ev){
        ev.preventDefault();
        var selectedId = $(this).data('id');
        $('#partner-id').val(selectedId);
        $('#new_dance').submit();
      });
    });
  <% end %>
<% end %>

<%= form_for(@dance) do |f| %>
  <% if @dance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dance.errors.count, "error") %> prohibited this dance from being saved:</h2>

      <ul>
      <% @dance.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
      <% @wedding.attendees.each do |attendee| %>
        <%= f.radio_button :partner_id, attendee.id, id: "partner-#{attendee.id}" %>
        <%= f.label :partner_id, attendee.username, for: "partner-#{attendee.id}" do %>
          <%= image_tag attendee.avatar.url(:thumb), class: "media-object", alt: attendee.username %>
          <%= attendee.username %>
        <% end %>
        <br />
      <% end %>
  </div>

  <%= f.submit 'Enviar' %>

<% end %>
